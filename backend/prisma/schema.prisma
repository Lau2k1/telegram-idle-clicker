// learn more it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-node"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  telegramId   BigInt   @unique
  firstName    String?  // ДОБАВЬТЕ ЭТУ СТРОКУ
  coins        Float    @default(0)
  clickPower   Int      @default(1)
  incomePerSec Int      @default(0)
  lastUpdate   DateTime @default(now())
}