generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  telegramId      BigInt   @unique
  firstName       String?  
  coins           Float    @default(0)
  clickPower      Int      @default(1)
  incomePerSec    Int      @default(0)
  // Максимальное время оффлайн-дохода в секундах (по умолчанию 3600 = 1 час)
  maxOfflineTime  Int      @default(3600) 
  lastUpdate      DateTime @default(now())
}