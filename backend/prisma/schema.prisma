generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  telegramId        BigInt    @unique
  firstName         String?
  coins             Float     @default(0)
  oil               Float     @default(0)
  clickPower        Int       @default(1)
  incomePerSec      Int       @default(0)
  oilPerSec         Float     @default(0)
  maxOfflineTime    Int       @default(3600)
  maxOilOfflineTime Int       @default(3600)
  boostUntil        DateTime? // Время окончания x2 буста
  processingUntil   DateTime?
  lastUpdate        DateTime  @default(now())
  fuel        Float    @default(0)
  refiningOilUntil   DateTime?
  refiningFuelUntil  DateTime?
  refiningOilAmount   Int @default(0)  // Количество для нефти
  refiningFuelAmount  Int @default(0) // Количество для топлива
}