generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  telegramId        BigInt    @unique
  firstName         String?
  coins             Float     @default(0)
  oil               Float     @default(0)
  clickPower        Int       @default(1)
  incomePerSec      Int       @default(0)
  oilPerSec         Float     @default(0)
  maxOfflineTime    Int       @default(3600) // Лимит золота
  maxOilOfflineTime Int       @default(3600) // Лимит нефти
  processingUntil   DateTime?
  lastUpdate        DateTime  @default(now())
}